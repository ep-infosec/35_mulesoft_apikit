<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>mule</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>../leagues</directory>
            <excludes>
                <exclude>*.iml</exclude>
                <exclude>target/**</exclude>
                <exclude>pom.xml</exclude>
                <exclude>src/test/**</exclude>
            </excludes>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>dot-classpath</source>
            <outputDirectory>leagues</outputDirectory>
            <destName>.classpath</destName>
        </file>
        <file>
            <source>dot-project</source>
            <outputDirectory>leagues</outputDirectory>
            <destName>.project</destName>
        </file>
        <file>
            <source>mule-project.xml</source>
            <outputDirectory>leagues</outputDirectory>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
            <outputDirectory>leagues/lib</outputDirectory>
            <useStrictFiltering>true</useStrictFiltering>
            <useProjectArtifact>false</useProjectArtifact>
            <scope>runtime</scope>
            <fileMode>0644</fileMode>
            <includes>
                <include>com.googlecode.json-simple:json-simple</include>
                <include>com.jayway.restassured:rest-assured</include>
                <include>org.hamcrest:hamcrest-library</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>